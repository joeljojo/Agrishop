<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    tools:context=".SupportCenter.SupportMaintainProductsActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        
        <ImageView
            android:id="@+id/edit_product_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@drawable/welcome" />

        <EditText
            android:id="@+id/edit_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_product_image"
            android:hint="Product Name"
            android:padding="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/input_design"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/edit_product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_product_name"
            android:hint="Product Price"
            android:padding="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/input_design"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/edit_product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_product_price"
            android:layout_marginTop="10dp"
            android:padding="20dp"
            android:hint="Product Description"
            android:background="@drawable/input_design"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="16dp" />

        <Button
            android:id="@+id/maintain_product_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_product_description"
            android:layout_marginTop="10dp"
            android:padding="20dp"
            android:text="Update"
            android:textAllCaps="false"
            android:background="@drawable/buttons"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="24sp" />
        <Button
            android:id="@+id/delete_product_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maintain_product_btn"
            android:layout_marginTop="35dp"
            android:padding="20dp"
            android:text="Delete"
            android:textAllCaps="false"
            android:background="@drawable/buttons"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="24sp" />
    </LinearLayout>


</androidx.cardview.widget.CardView>