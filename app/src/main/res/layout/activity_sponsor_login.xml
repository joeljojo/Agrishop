<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_light"
    tools:context=".Farmers.SponsorLoginActivity">

    <ImageView
        android:id="@+id/seller_logo"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:src="@drawable/applogo"
        />
    <TextView
        android:id="@+id/login_title_seller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seller Login"
        android:layout_below="@+id/seller_logo"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="24sp"
        android:padding="10dp"
        android:textAlignment="center"
        />

    <EditText
        android:id="@+id/seller_login_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_title_seller"
        android:background="@drawable/input_design"
        android:padding="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:textSize="16sp"
        android:inputType="textEmailAddress"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/black"
        android:hint="Enter your email address"
        />


    <EditText
        android:id="@+id/seller_login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/seller_login_email"
        android:background="@drawable/input_design"
        android:padding="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:hint="Enter your password"
        />

    <Button
        android:id="@+id/seller_login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/seller_login_password"
        android:layout_marginTop="10dp"
        android:background="@drawable/buttons"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:text="Login"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />
    <Button
        android:id="@+id/seller_no_account_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/seller_login_btn"
        android:layout_marginTop="10dp"
        android:background="@drawable/input_design"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:text="Create new account  ? sign up"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

</RelativeLayout>